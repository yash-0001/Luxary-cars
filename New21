pipeline {
    agent any

    environment {
        IMAGE_NAME = "mywebsite:latest"
        REGISTRY = "localhost:5000" // Local registry
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    sh "docker tag $IMAGE_NAME $REGISTRY/$IMAGE_NAME"
                    sh "docker push $REGISTRY/$IMAGE_NAME"
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    sh """
                    docker stop mywebsite || true
                    docker rm mywebsite || true
                    docker run -d --name mywebsite -p 3000:3000 $REGISTRY/$IMAGE_NAME
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                script {
                    sh 'curl -f http://localhost:3000 || exit 1'
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed!'
        }
        success {
            echo 'Deployment successful!'
        }
    }
}










cat >eks-cluster-role-trust-policy.json <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "eks.amazonaws.com"
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF




eksctl create cluster \
  --name yashwardhan \
  --region us-west-1 \
  --zones us-west-1c \
  --nodegroup-name user-yash \
  --node-type t2.small \
  --nodes 1










